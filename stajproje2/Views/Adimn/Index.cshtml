@using stajproje2.Models
@model List<stajproje2.Models.Kullanıcı>

@{
    ViewBag.Title = "Index";
}

<title>Personel Listele</title>
@using (Html.BeginForm())
{
    <br />
    <br />
    <br />
    <br />
    <br />
    <h2>Personel Listesi</h2>
    <hr />

    <div class="container">

        @using (Html.BeginForm())
        {
            <div style="width:25%;float:left">
                @Html.TextBox("ara", null, new { @class = "form-control" });
            </div>
            <div style="float:left">

                @Html.ActionLink("Ara", "Index", null, new { @style = "height:35px;", @class = "btn btn-info", onclick = "$(this).parents('form').attr('action', $(this).attr('href'));$(this).parents('form').submit();return false;" })
            </div>
        }
    </div>
    <div class="dcf-overflow-x-auto" tabindex="0">
        <table id="tablo"  class="dcf-table dcf-table-responsive table-bordered dcf-table-striped dcf-w-100%">
            <thead>

                <tr style="font-size:14px;">
                    <th scope="col">Personel Id </th>
                    <th scope="col">Personel İsim ve Soyisim </th>
                    <th scope="col">Personel tel </th>
                    <th scope="col">Personel mail </th>
                    <th scope="col">Personel tarih </th>
                    <th scope="col">Sil</th>
                    <th scope="col">Güncelle</th>
                    <th scope="col">Son İslem Tarihi</th>
                </tr>
            </thead>


            @foreach (var perso in Model)
            {

                <tr >
                    <td style="font-size:14px;">@perso.k_id</td>
                    <td style="font-size:14px;">@perso.k_isim</td>
                    <td style="font-size:14px;" >@perso.k_tel</td>
                    <td style="font-size:11px;">@perso.k_mail</td>
                    <td style="font-size:14px;">@perso.k_baslangıc</td>
                    <td style="font-size:14px;"><a href="/Sil/Silperso/@perso.k_id" style="font-size:14px;" class="btn btn-danger">Sil</a></td>
                    <td style="font-size:14px;"><a href="/Güncelleme/Güncelleperso/@perso.k_id" style="font-size:14px;" class="btn btn-primary">Güncelle</a></td>
                    <td style="font-size:14px;">@perso.k_islem_tarihi</td>


               </tr>


            }
        </table>

    </div>

}

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<link href="~/Content/bootstrap.css" rel="stylesheet" />

<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>
<link rel="stylesheet" type="text/css" href="DataTables/datatables.min.css" />

<script type="text/javascript" src="DataTables/datatables.min.js"></script>

<script>
    $('#tablo').dataTable({
        "paging": true,
        "searching": false,
        language: {
            info: "_TOTAL_ kayıttan _START_ - _END_ kayıt gösteriliyor.",
            infoEmpty: "Gösterilecek hiç kayıt yok.",
            loadingRecords: "Kayıtlar yükleniyor.",
            lengthMenu: "Sayfada _MENU_ kayıt göster",
            zeroRecords: "Tablo boş",
            search: "Arama:",
            infoFiltered: "(toplam _MAX_ kayıttan filtrelenenler)",
            buttons: {
                copyTitle: "Panoya kopyalandı.",
                copySuccess: "Panoya %d satır kopyalandı",
                copy: "Kopyala",
                print: "Yazdır",
            },


        }


    });



</script>






